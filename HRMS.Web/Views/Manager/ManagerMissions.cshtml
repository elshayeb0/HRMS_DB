@model IEnumerable<HRMS.Web.Models.Mission.Mission>

@{
    ViewData["Title"] = "Pending Mission Requests";
}

<h1><i class="fas fa-clipboard-list"></i> Pending Mission Requests</h1>
<hr />

@* --- Display Status Messages --- *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>✅ Success!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="background-color: #f8d7da; border-color: #f5c6cb; color: #721c24;">
        <strong>❌ Rejected!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No pending mission requests requiring your approval.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Mission ID</th>
                <th>Employee Name</th>
                <th>Destination</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MissionId</td>
                    <td>@item.EmployeeName</td>
                    <td>@item.Destination</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td><span class="badge bg-warning text-dark">@item.Status</span></td>
                    <td>
                        <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#approveModal_@item.MissionId">
                            Approve
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal_@item.MissionId">
                            Reject
                        </button>
                    </td>
                </tr>

                @* --- Approve Modal --- *@
                <div class="modal fade" id="approveModal_@item.MissionId" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <form method="post" asp-controller="Manager" asp-action="ApproveMission">
                                <div class="modal-header">
                                    <h5 class="modal-title">Approve Mission: @item.Destination</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="missionId" value="@item.MissionId" />
                                    <div class="form-group">
                                        <label for="remarks_approve_@item.MissionId">Manager Remarks (Optional):</label>
                                        <textarea class="form-control" id="remarks_approve_@item.MissionId" name="remarks" rows="3"></textarea>
                                    </div>
                                    <p>Are you sure you want to approve this mission for <strong>@item.EmployeeName</strong>?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">Confirm Approval</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                @* --- Reject Modal --- *@
                <div class="modal fade" id="rejectModal_@item.MissionId" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <form method="post" asp-controller="Manager" asp-action="RejectMission">
                                <div class="modal-header">
                                    <h5 class="modal-title">Reject Mission: @item.Destination</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="missionId" value="@item.MissionId" />
                                    <div class="form-group">
                                        <label for="remarks_reject_@item.MissionId">Manager Remarks (Required for Rejection):</label>
                                        <textarea class="form-control" id="remarks_reject_@item.MissionId" name="remarks" rows="3" required></textarea>
                                    </div>
                                    <p>Are you sure you want to <strong>reject</strong> this mission for <strong>@item.EmployeeName</strong>?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
}