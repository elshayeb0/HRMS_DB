@using HRMS.Web.Data.Entities
@{
    var leaveTypes = ViewBag.LeaveTypes as List<Leave> ?? new List<Leave>();
}

<h2>Assign / Set Leave Entitlement</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="AssignEntitlement" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Employee ID</label>
        <input name="employeeId" type="number" class="form-control" min="1" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Leave Type</label>
        <select name="leaveType" class="form-select" required>
            <option value="">-- Select --</option>
            @foreach (var lt in leaveTypes)
            {
                <option value="@lt.leave_type">@lt.leave_type</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Entitlement (days)</label>
        <input name="entitlement" type="number" step="0.001" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary ms-2" asp-action="Entitlements">Back</a>
</form>