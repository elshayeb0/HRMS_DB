@using HRMS.Web.Data.Entities
@{
    ViewData["Title"] = "Adjust Balance";
    // Force CMS layout for dark theme
    Layout = "~/Views/Shared/_LayoutCms.cshtml";

    var leaveTypes = ViewBag.LeaveTypes as List<Leave> ?? new List<Leave>();
}

<!-- Local Styling for Dark Form Inputs -->
<style>
    .form-control, .form-select {
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--neon-border);
        color: var(--neon-text-main);
    }
    .form-control:focus, .form-select:focus {
        background-color: rgba(0, 0, 0, 0.5);
        border-color: #ffc107; /* Warning yellow for adjustment focus */
        box-shadow: 0 0 10px rgba(255, 193, 7, 0.3);
        color: #fff;
    }
    .form-label {
        color: var(--neon-text-muted);
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    .form-text {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.75rem;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">

        <!-- MASTER WRAPPER: Neon Card -->
        <div class="cms-card" style="border-color: rgba(255, 193, 7, 0.3);">
            <div class="cms-card-header text-warning">
                <i class="bi bi-sliders me-2"></i> Adjust Leave Balance
            </div>

            <div class="cms-card-body">

                <div class="alert alert-warning bg-transparent border-warning text-warning mb-4">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Admin Action:</strong> Manual adjustments bypass standard accrual rules.
                </div>

                <form asp-action="AdjustBalance" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Employee ID</label>
                        <input name="employeeId" type="number" class="form-control" min="1" placeholder="e.g. 101" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Leave Type</label>
                        <select name="leaveType" class="form-select" required>
                            <option value="" class="text-dark">-- Select Leave Type --</option>
                            @foreach (var lt in leaveTypes)
                            {
                                <option value="@lt.leave_type" class="text-dark">@lt.leave_type</option>
                            }
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Adjustment Amount</label>
                        <div class="input-group">
                            <input name="adjustment" type="number" step="0.001" class="form-control" placeholder="+2.0 or -1.5" required />
                            <span class="input-group-text bg-dark border-secondary text-white">Days</span>
                        </div>
                        <div class="form-text mt-2">
                            <i class="bi bi-info-circle me-1"></i> Positive values add days, negative values remove days.
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a class="btn btn-outline-secondary" asp-action="Entitlements">Cancel</a>
                        <button type="submit" class="btn btn-warning shadow-sm fw-bold text-dark">
                            <i class="bi bi-check-circle-fill me-1"></i> Apply Adjustment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>