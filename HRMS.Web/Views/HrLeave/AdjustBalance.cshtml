@using HRMS.Web.Data.Entities
@{
    var leaveTypes = ViewBag.LeaveTypes as List<Leave> ?? new List<Leave>();
}

<h2>Adjust Leave Balance</h2>

<form asp-action="AdjustBalance" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Employee ID</label>
        <input name="employeeId" type="number" class="form-control" min="1" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Leave Type</label>
        <select name="leaveType" class="form-select" required>
            <option value="">-- Select --</option>
            @foreach (var lt in leaveTypes)
            {
                <option value="@lt.leave_type">@lt.leave_type</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Adjustment (can be negative)</label>
        <input name="adjustment" type="number" step="0.001" class="form-control" required />
        <div class="form-text">Example: +2 adds 2 days, -1 subtracts 1 day.</div>
    </div>

    <button type="submit" class="btn btn-warning">Apply</button>
    <a class="btn btn-secondary ms-2" asp-action="Entitlements">Back</a>
</form>