@model HRMS.Web.Models.Leave.OverrideLeaveDecisionVM
@{
    ViewData["Title"] = "Override Decision";
    // Force CMS layout for dark theme
    Layout = "~/Views/Shared/_LayoutCms.cshtml";
}

<!-- Local Styling for Dark Form Inputs -->
<style>
    .form-control {
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--neon-border);
        color: var(--neon-text-main);
    }
    .form-control:focus {
        background-color: rgba(0, 0, 0, 0.5);
        border-color: #dc3545; /* Red focus for Override/Danger actions */
        box-shadow: 0 0 10px rgba(220, 53, 69, 0.3);
        color: #fff;
    }
    .form-control[readonly] {
        background-color: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        cursor: not-allowed;
    }
    .form-label {
        color: var(--neon-text-muted);
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">

        <!-- MASTER WRAPPER: Neon Card -->
        <div class="cms-card" style="border-color: rgba(220, 53, 69, 0.3);">
            <div class="cms-card-header text-danger">
                <i class="bi bi-shield-exclamation me-2"></i> Override Leave Decision
            </div>

            <div class="cms-card-body">

                <div class="alert alert-danger bg-transparent border-danger text-danger mb-4">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i>
                    <strong>Admin Override:</strong> This action forces a status change and bypasses standard approval workflows.
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success bg-transparent border-success text-success mb-3">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    </div>
                }

                <form asp-action="OverrideDecision" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Target Leave Request ID</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-muted">#</span>
                            <input asp-for="LeaveRequestId" class="form-control" readonly />
                        </div>
                        <span asp-validation-for="LeaveRequestId" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Override Justification</label>
                        <textarea asp-for="Reason" class="form-control" rows="5" placeholder="Explain why this decision is being overridden (e.g., 'System Error Correction', 'Executive Order')..."></textarea>
                        <span asp-validation-for="Reason" class="text-danger small"></span>
                        <div class="form-text text-muted small mt-1">
                            Max 200 chars. This reason will be logged for audit purposes.
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <!-- Assuming we go back to Entitlements or a specific Request View -->
                        <a class="btn btn-outline-secondary" asp-action="Entitlements">Cancel</a>

                        <button type="submit" class="btn btn-danger shadow-sm">
                            <i class="bi bi-lightning-fill me-1"></i> Force Override
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}