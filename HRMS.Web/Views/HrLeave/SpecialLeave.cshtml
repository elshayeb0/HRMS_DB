@model HRMS.Web.Models.Leave.ConfigureSpecialLeaveVM
@using Microsoft.AspNetCore.Mvc.Rendering
@using HRMS.Web.Data.Entities

@{
    ViewData["Title"] = "Configure Special Leave";
    // Force CMS layout for dark theme
    Layout = "~/Views/Shared/_LayoutCms.cshtml";
}

<!-- Local Styling for Dark Form Inputs -->
<style>
    .form-control, .form-select {
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--neon-border);
        color: var(--neon-text-main);
    }
    .form-control:focus, .form-select:focus {
        background-color: rgba(0, 0, 0, 0.5);
        border-color: var(--neon-purple); /* Purple focus for Config actions */
        box-shadow: 0 0 10px rgba(188, 19, 254, 0.3);
        color: #fff;
    }
    .form-label {
        color: var(--neon-text-muted);
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">

        <!-- MASTER WRAPPER: Neon Card -->
        <div class="cms-card">
            <div class="cms-card-header" style="color: var(--neon-purple);">
                <i class="bi bi-stars me-2"></i> Configure Special Leave
            </div>

            <div class="cms-card-body">

                <p class="text-muted small mb-4">
                    Define special rules or exceptions for specific leave types here.
                </p>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success bg-transparent border-success text-success mb-4">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    </div>
                }

                <form asp-action="SpecialLeave" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Leave Type</label>
                        <select asp-for="LeaveType"
                                class="form-select"
                                asp-items="@(new SelectList((IEnumerable<Leave>)ViewBag.LeaveTypes, nameof(Leave.leave_type), nameof(Leave.leave_type)))">
                            <option value="" class="text-dark">-- Select Leave Type --</option>
                        </select>
                        <span asp-validation-for="LeaveType" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Special Rules</label>
                        <textarea asp-for="Rules" class="form-control" rows="3" maxlength="200" placeholder="e.g. Requires Executive Approval, Paid at 50%..."></textarea>
                        <span asp-validation-for="Rules" class="text-danger small"></span>
                        <div class="form-text text-muted small mt-1">
                            Max 200 characters. These rules will be displayed to employees.
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a class="btn btn-outline-secondary" asp-action="Types">Cancel</a>
                        <button type="submit" class="btn btn-primary shadow-sm" style="background-color: var(--neon-purple); border-color: var(--neon-purple);">
                            <i class="bi bi-magic me-2"></i> Save Configuration
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}