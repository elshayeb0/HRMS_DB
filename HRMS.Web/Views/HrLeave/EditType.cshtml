@model HRMS.Web.Data.Entities.Leave
@{
    ViewData["Title"] = "Edit Leave Type";
    // Force CMS layout for dark theme
    Layout = "~/Views/Shared/_LayoutCms.cshtml";
}

<!-- Local Styling for Dark Form Inputs -->
<style>
    .form-control {
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--neon-border);
        color: var(--neon-text-main);
    }
    .form-control:focus {
        background-color: rgba(0, 0, 0, 0.5);
        border-color: var(--neon-purple); /* Purple focus for Config actions */
        box-shadow: 0 0 10px rgba(188, 19, 254, 0.3);
        color: #fff;
    }
    .form-label {
        color: var(--neon-text-muted);
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-5">

        <!-- MASTER WRAPPER: Neon Card -->
        <div class="cms-card">
            <div class="cms-card-header" style="color: var(--neon-purple);">
                <i class="bi bi-pencil-square me-2"></i> Edit Leave Type
            </div>

            <div class="cms-card-body">

                <form asp-action="EditType" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="leave_id" />

                    <div class="mb-4">
                        <label class="form-label">Leave Type Name</label>
                        <input asp-for="leave_type" class="form-control" placeholder="e.g. Annual Leave" />
                        <span asp-validation-for="leave_type" class="text-danger small"></span>
                        <div class="form-text text-muted small mt-1">
                            Updating this will change the label across the entire system.
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a class="btn btn-outline-secondary" asp-action="Types">Cancel</a>
                        <button type="submit" class="btn btn-primary shadow-sm" style="background-color: var(--neon-purple); border-color: var(--neon-purple);">
                            <i class="bi bi-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}