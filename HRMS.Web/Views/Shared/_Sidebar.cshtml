@using Microsoft.AspNetCore.Identity
@{
    // Helper to determine active state
    string IsActive(string controller, string action)
    {
        var routeData = ViewContext.RouteData.Values;
        var currentController = routeData["controller"]?.ToString();
        var currentAction = routeData["action"]?.ToString();
        return (string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) &&
                string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase))
                ? "active" : "";
    }
}

<!-- Local style for the header hover effect -->
<style>
    .cms-sidebar-header {
        transition: all 0.3s ease;
        text-decoration: none !important;
    }
    .cms-sidebar-header:hover {
        background: linear-gradient(90deg, rgba(252, 238, 10, 0.15), transparent); /* Stronger yellow gradient */
        cursor: pointer;
    }
    .cms-sidebar-header:hover .brand-text {
        text-shadow: 0 0 20px rgba(252, 238, 10, 0.8);
        transform: scale(1.02);
        transition: all 0.3s;
    }

    /* --- NEW INFO PILLS STYLES --- */
    .sidebar-info-panel {
        padding: 0 1.5rem 2rem 1.5rem;
        margin-top: auto; /* Pushes to bottom of sidebar */
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        background: linear-gradient(180deg, transparent, rgba(0,0,0,0.3));
    }

    .info-pill {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 50px; /* Full pill shape */
        padding: 0.7rem 1.2rem;
        margin-top: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        backdrop-filter: blur(5px);
        transition: all 0.3s ease;
        animation: pill-float 5s ease-in-out infinite;
        position: relative;
    }

    /* Cyan Variant (System) */
    .info-pill.cyan {
        border-color: rgba(0, 240, 255, 0.3);
        box-shadow: 0 0 10px rgba(0, 240, 255, 0.1);
    }
    .info-pill.cyan:hover {
        border-color: var(--cp-cyan);
        box-shadow: 0 0 25px rgba(0, 240, 255, 0.5); /* Pop out glow */
        background: rgba(0, 240, 255, 0.05);
        transform: translateY(-2px) scale(1.02);
    }

    /* Purple Variant (Security) */
    .info-pill.purple {
        border-color: rgba(185, 103, 255, 0.3);
        box-shadow: 0 0 10px rgba(185, 103, 255, 0.1);
        animation-delay: 2.5s; /* Sync offset for organic feel */
    }
    .info-pill.purple:hover {
        border-color: var(--cp-purple);
        box-shadow: 0 0 25px rgba(185, 103, 255, 0.5); /* Pop out glow */
        background: rgba(185, 103, 255, 0.05);
        transform: translateY(-2px) scale(1.02);
    }

    .pill-label {
        font-size: 0.65rem;
        color: rgba(255,255,255,0.7);
        letter-spacing: 1px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .pill-value {
        font-size: 0.8rem;
        font-weight: 800;
        color: #fff;
        text-shadow: 0 0 5px rgba(255,255,255,0.3);
    }

    @@keyframes pill-float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-4px); } /* Levitating effect */
    }
</style>

