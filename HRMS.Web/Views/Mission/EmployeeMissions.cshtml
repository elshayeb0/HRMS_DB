@model List<HRMS.Web.Models.Mission.Mission>

@{
    ViewData["Title"] = "My Missions";
}

<div class="container mt-4">
    <h2>My Assigned Missions</h2>
    <hr />

    @* Success/Error Messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Check if there are missions *@
    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mission ID</th>
                        <th>Destination</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Manager</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mission in Model)
                    {
                        <tr>
                            <td>@mission.MissionId</td>
                            <td>
                                <i class="bi bi-geo-alt-fill text-primary"></i>
                                @mission.Destination
                            </td>
                            <td>@mission.StartDate.ToString("MMM dd, yyyy")</td>
                            <td>@mission.EndDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (mission.Status == "Approved")
                                {
                                    <span class="badge bg-success">@mission.Status</span>
                                }
                                else if (mission.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">@mission.Status</span>
                                }
                                else if (mission.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">@mission.Status</span>
                                }
                                else if (mission.Status == "Completed")
                                {
                                    <span class="badge bg-info">@mission.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@mission.Status</span>
                                }
                            </td>
                            <td>@mission.ManagerName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            No missions assigned to you at the moment.
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}