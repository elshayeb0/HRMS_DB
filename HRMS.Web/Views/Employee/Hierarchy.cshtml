@model List<HRMS.Web.Models.Employees.OrgHierarchyRow>
@{
    ViewData["Title"] = "Organization Hierarchy";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Organization Hierarchy</h2>
        <a class="btn btn-outline-secondary" asp-controller="Employee" asp-action="Create">Add Employee</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                            <th>Manager Name</th>
                            <th>Department</th>
                            <th>Position</th>
                            <th>Hierarchy Level</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || Model.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">No hierarchy data found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var row in Model)
                            {
                                <tr>
                                    <td>@row.EmployeeID</td>
                                    <td>@row.EmployeeName</td>
                                    <td>@row.ManagerName</td>
                                    <td>@row.Department</td>
                                    <td>@row.Position</td>
                                    <td>@(row.HierarchyLevel?.ToString() ?? "-")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>