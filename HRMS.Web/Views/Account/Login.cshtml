@model HRMS.Web.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="mb-1">HRMS Login</h3>
                    <p class="text-muted mb-4">Sign in to access the General Component.</p>

                    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form asp-action="Login" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="name@company.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="For Milestone 3: National ID" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <div class="form-text">
                                Milestone note: since the database has no password field, the system authenticates using <strong>National ID</strong>.
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3 text-muted small">
                If you get “Access Denied”, your account is not assigned the required role table (SystemAdministrator / HRAdministrator / etc.).
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}