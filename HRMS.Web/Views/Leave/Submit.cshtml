@model HRMS.Web.Models.Leave.SubmitLeaveRequestVM
@{
    var leaveTypes = ViewBag.LeaveTypes as IEnumerable<HRMS.Web.Data.Entities.Leave>;
}

<h2>Submit Leave Request</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Employee ID</label>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Leave Type</label>
        <select asp-for="LeaveTypeId" class="form-select">
            <option value="">-- Select --</option>
            @foreach (var lt in leaveTypes ?? Enumerable.Empty<HRMS.Web.Data.Entities.Leave>())
            {
                <option value="@lt.leave_id">@lt.leave_type</option>
            }
        </select>
        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Reason</label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Attachments</label>
        <input asp-for="Attachments" type="file" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}