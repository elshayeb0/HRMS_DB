@model List<HRMS.Web.Data.Entities.Query.PendingLeaveRequestRow>

<h2>Pending Leave Requests (Manager @ViewBag.ManagerId)</h2>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No pending leave requests found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Request ID</th>
                <th>Employee</th>
                <th>Leave Type</th>
                <th>Justification</th>
                <th>Duration</th>
                <th>Approval Timing</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.LeaveRequestID</td>
                <td>@r.EmployeeName (@r.EmployeeID)</td>
                <td>@r.LeaveType</td>
                <td>@r.justification</td>
                <td>@r.duration</td>
                <td>@(r.approval_timing?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>

                <!-- STATUS -->
                <td>
                    <span class="badge bg-warning text-dark">@r.status</span>
                </td>

                <!-- ACTIONS -->
                <td>
                    <!-- FLAG -->
                    <a class="btn btn-sm btn-warning me-1"
                       href="/Leave/FlagIrregular?managerId=@ViewBag.ManagerId&employeeId=@r.EmployeeID">
                        Flag
                    </a>

                    <!-- APPROVE -->
                    <form asp-action="Approve" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="managerId" value="@ViewBag.ManagerId" />
                        <input type="hidden" name="leaveRequestId" value="@r.LeaveRequestID" />
                        <button type="submit" class="btn btn-success btn-sm">
                            Approve
                        </button>
                    </form>

                    <!-- REJECT -->
                    <a class="btn btn-danger btn-sm ms-1"
                       asp-action="Reject"
                       asp-route-managerId="@ViewBag.ManagerId"
                       asp-route-leaveRequestId="@r.LeaveRequestID">
                        Reject
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}